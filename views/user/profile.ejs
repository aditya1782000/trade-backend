<%- include('../partials/header.ejs')%>
<div class = "content">
    <h2>Welcome, <%=user.firstName%></h2>
    
    <% if(stories.length){ %>
        <table>
            <tr>
              <th>Item</th>
              <th>Category</th>
              <th>Actions</th>
            </tr>
            <% stories.forEach(story => { %>
            <tr>
                <td><a href="/items/<%= story.id%>"><%= story.title %></a></td>
                <td><%= story.category %></td>
                <td><%= story.status %></td>
                <td>
                    <form style="float: left;">
                        <button type="submit" formmethod="GET" formaction="/items/<%= story.id%>/edit">Edit</button>
            <button type="submit" formmethod="POST" formaction="/items/<%= story.id%>?_method=DELETE">Delete</button>
                    </form>
                </td>
            </tr>
            <% }); %>
        </table>
        <% } else { %>
            <p style="margin: 20px auto;width: 95%;">There are no Items to display.</p>
        <% } %>
    </div>
    <%- include('../partials/footer.ejs')%>
