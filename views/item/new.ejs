<%- include('../partials/header.ejs')%>
<div class = "content">
    <form action = '/items' method = 'POST'>
        <table>
            <tr>
                <td><label for="category">category</label></td>
                <td><input type="text" id="category" name="category" class = "fixed-width" required></td>
            </tr>
            <tr>
                <td><label for="title">Title</label></td>
                <td><input type="text" id="title" name="title" class = "fixed-width" required></td>
            </tr>
            <tr>
                <td class = "align-top"><label for="content">Content</label></td>
                <td><textarea rows="5" id="content" name="content" class = "fixed-width" required minlength="10"></textarea></td>
            </tr>
            <tr>
                <td class = "align-top"><label for="status">Status</label></td>
                <td><input id="status" name="status" class = "fixed-width" required></td>
            </tr>
            <tr>
                <td class = "align-top"><label for="image">Image</label></td>
                <td><input type="url" id="image" name="image" class = "fixed-width" required></td>
            </tr>
            <tr>
                <td colspan="2" class = "align-right"><button>Submit</button></td>
            </tr>
        </table>        
    </form>

    </div>
