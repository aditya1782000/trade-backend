<%- include('../partials/header.ejs')%>
<div class = "content">
    <form method="POST" action="/items/<%= item.id%>?_method=PUT">
        <table>
            <tr>
                <td><label for="category" >category</label></td>
                <td><input type="text" id="category" name="category" value = "<%= item.category%>" class = "list-group-item" required></td>
            </tr>
            <tr>
                <td><label for="title" >Title</label></td>
                <td><input type="text" id="title" name="title" value = "<%= item.title%>" class = "list-group-item" required></td>
            </tr>
            <tr><td class = "align-top"><label for="content">Content</label></td>
                <td><textarea rows="5" id="content" name="content" class = "fixed-width" required minlength="10"><%= item.content%></textarea></td>
            </tr>
            <tr><td class = "align-top"><label for="status">Status</label></td>
                <td><input id="status" name="status" value = "<%= item.status%>" class = "list-group-item" required></td>
            </tr>
            <tr><td class = "align-top"><label for="image">Image</label></td>
                <td><input type="url" id="image" name="image" value = "<%= item.image%>" class = "list-group-item" required></td>
            </tr>
            <tr>
                <td colspan="2" class = "align-right"><button>Submit</button></td>
            </tr>
            </table>        
    </form>

    </div>
    <%- include('../partials/footer.ejs')%>
